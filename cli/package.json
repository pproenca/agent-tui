  "homepage": "https://github.com/pproenca/agent-tui#readme",
  "keywords": [
    "tui",
    "terminal",
    "ai",
    "agent",
    "automation",
    "cli",
    "pty"
  ],
  "license": "MIT",
  "name": "agent-tui",
  "optionalDependencies": {
    "agent-tui-darwin-arm64": "1.0.1",
    "agent-tui-darwin-x64": "1.0.1",
    "agent-tui-linux-arm64": "1.0.1",
    "agent-tui-linux-x64": "1.0.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pproenca/agent-tui.git"
  },
  "scripts": {
    "build:native": "cargo build --release -p agent-tui && node scripts/copy-native.js",
    "dist:npm": "cargo run -p xtask -- dist npm",
